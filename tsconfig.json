{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["DOM", "DOM.Iterable", "ES2020"],
        "pretty": true
    },

    "typedocOptions": {
        "entryPoints": [
            "./src/main.ts",
            "./src/api",
            "./src/directives",
            "./src/geo",
            "./src/lang",
            "./src/fixtures/*/api"
        ],
        "out": "docs",
        "entryPointStrategy": "expand",
        "readme": "./README",
        "includeVersion": true,
        "githubPages": true,
        "cleanOutputDir": true
    },

    "references": [
        {
            "path": "./tsconfig.vite-config.json"
        }
    ]
}
